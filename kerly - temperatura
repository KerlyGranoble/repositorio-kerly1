# Definimos las ciudades, días de la semana y semanas.
ciudades = ["Guayaquil", "Quito", "Quevedo", "Cuenca", "Ambato"]
dias_semana = ["Lunes", "Martes", "Miércoles", "Jueves", "Viernes", "Sábado", "Domingo"]
semanas = 4 # Número de semanas

# Creamos la matriz 3D (ciudad x día x semana) con temperaturas aleatorias
matriz_temperaturas = [[[random.randint(10, 35) for _ in range(len(dias_semana))] for _ in range(semanas)] for _ in range(len(ciudades))]

# Calcular promedios de temperaturas por ciudad y semana.

for i, ciudad in enumerate(ciudades):
    print(f"\nPromedio de temperaturas para {ciudad}:")
    for semana in range(semanas):
        promedio = sum(matriz_temperaturas[i][semana]) / len(dias_semana)
        print(f"  Semana {semana + 1}: {promedio:.2f}°C")



